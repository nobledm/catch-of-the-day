/*
  Possible Animations:
  enter
  exit
  appear Must set transitionAppear={true} on animation component
*/

.order-enter
  transform: translateX(-120%)
  transition .5s
  max-height 0
  padding 0
  &.order-enter-active
    max-height: 60px
    padding 2rem 0 !important
    transform: translateX(0)

.order-exit
  transform: translateX(0)
  transition .5s
  &.order-exit-active
    padding 0
    transform: translateX(-120%)

.count-enter
  transition .5s
  transform translateY(100%)
  &.count-enter-active
    transform translateY(0)

.count-exit
  position absolute
  left 0
  bottom 0
  transition .5s
  transform translateY(0)
  &.count-exit-active
    transform translateY(-100%)